//! Partially-generated data for handling build variants.
//!
//! The data is autogenerated from the supported StorPool build variants.

use std::collections::HashMap;
use std::str::FromStr;

use serde::{Deserialize, Serialize};

use crate::{
    Builder, DebRepo, Detect, Repo, Variant, VariantDefTop, VariantError, VariantFormat,
    VariantFormatVersion, YumRepo,
};

/// The supported StorPool build variants (OS distribution, version, etc).
#[derive(Debug, Clone, PartialEq, Hash, Eq, Serialize, Deserialize)]
pub enum VariantKind {
    {%- for name, var in variants|dictvsort -%}
    /// {{ var.descr }}
    {{ name }},
    {%- endfor -%}
}

impl VariantKind {
    {%- for name in variants|vsort -%}
    const {{ name }}_NAME: &'static str = "{{ name }}";
    {%- endfor -%}
}

impl AsRef<str> for VariantKind {
    fn as_ref(&self) -> &str {
        match self {
            {%- for name in variants|vsort -%}
            VariantKind::{{ name }} => VariantKind::{{ name }}_NAME,
            {%- endfor -%}
        }
    }
}

impl FromStr for VariantKind {
    type Err = VariantError;

    fn from_str(s: &str) -> Result<Self, Self::Err> {
        match s {
            {%- for name in variants|vsort -%}
            VariantKind::{{ name }}_NAME => Ok(VariantKind::{{ name }}),
            {%- endfor -%}
            other => Err(VariantError::BadVariant(other.to_string())),
        }
    }
}

/// Return the definition of the StorPool variants.
pub fn get_variants() -> &'static VariantDefTop {
    lazy_static! {
        static ref DEF_TOP: VariantDefTop = VariantDefTop {
            format: VariantFormat {
                version: VariantFormatVersion {
                    major: {{ format_version[0] }},
                    minor: {{ format_version[1] }},
                },
            },
            order: vec![
                {%- for name in order %}
                    VariantKind::{{name}},
                {%- endfor %}
            ],
            variants: HashMap::from(
                [
                    {%- for name, var in variants|dictvsort %}
                    (
                            VariantKind::{{ name }},
                            Variant {
                                kind: VariantKind::{{ name }},
                                descr: "{{ var.descr }}".to_string(),
                                family: "{{ var.family }}".to_string(),
                                parent: "{{ var.parent }}".to_string(),
                                detect: Detect {
                                    filename: "{{ var.detect.filename }}".to_string(),
                                    regex: r"{{ var.detect.regex.pattern }}".to_string(),
                                    os_id: "{{ var.detect.os_id }}".to_string(),
                                    os_version_regex: r"{{ var.detect.os_version_regex.pattern }}".to_string(),
                                },
                                commands: HashMap::from(
                                    [
                                        {%- for cat_name in var.commands._fields|sort %}
                                        (
                                            "{{ cat_name }}".to_string(),
                                            HashMap::from(
                                                [
                                                    {%- for cmd_name in var.commands|attr(cat_name)|attr("_fields")|sort %}
                                                    (
                                                        "{{ cmd_name }}".to_string(),
                                                        vec![
                                                            {%- for word in var.commands|attr(cat_name)|attr(cmd_name) %}
                                                            "{{ word|replace("\\", "\\\\")|replace('"', '\\"') }}".to_string(),
                                                            {%- endfor %}
                                                        ],
                                                    ),
                                                    {%- endfor %}
                                                ]
                                            ),
                                        ),
                                        {%- endfor %}
                                    ]
                                ),
                                min_sys_python: "{{ var.min_sys_python }}".to_string(),
                                repo: {% if var.family == "redhat" %}
                                    Repo::Yum(YumRepo {
                                        yumdef: "{{ var.repo.yumdef }}".to_string(),
                                        keyring: "{{ var.repo.keyring }}".to_string(),
                                    }),
                                    {% elif var.family == "debian" %}
                                    Repo::Deb(DebRepo {
                                        codename: "{{ var.repo.codename }}".to_string(),
                                        vendor: "{{ var.repo.vendor }}".to_string(),
                                        sources: "{{ var.repo.sources }}".to_string(),
                                        keyring: "{{ var.repo.keyring }}".to_string(),
                                        req_packages: vec![
                                            {%- for pkg in var.repo.req_packages %}
                                            "{{ pkg }}".to_string(),
                                            {%- endfor %}
                                        ],
                                    }),
                                    {% else %}
                                    INVALID!,
                                    {% endif %}
                                package: HashMap::from(
                                    [
                                        {%- for pkg_name, pkg in var.package|dictsort %}
                                        ("{{ pkg_name }}".to_string(), "{{ pkg }}".to_string()),
                                        {%- endfor %}
                                    ]
                                ),
                                systemd_lib: "{{ var.systemd_lib }}".to_string(),
                                file_ext: "{{ var.file_ext }}".to_string(),
                                initramfs_flavor: "{{ var.initramfs_flavor }}".to_string(),
                                builder: Builder {
                                    alias: "{{ var.builder.alias }}".to_string(),
                                    base_image: "{{ var.builder.base_image }}".to_string(),
                                    branch: "{{ var.builder.branch }}".to_string(),
                                    kernel_package: "{{ var.builder.kernel_package }}".to_string(),
                                    utf8_locale: "{{ var.builder.utf8_locale }}".to_string(),
                                },
                            },
                    ),
                    {%- endfor %}
                ]
            ),
            version: "{{ version }}".to_string(),
        };
    }
    if DEF_TOP.format.version.major != 1 {
        panic!(
            "Internal error: JSON variant definition: version {:?}",
            DEF_TOP.format.version
        );
    }
    &DEF_TOP
}
